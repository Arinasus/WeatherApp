<UserControl x:Class="WeatherApp.ReportUserControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock x:Name="TitleReportGeneration"
                   Text="Генерация отчетов" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="#343A40"
                   Margin="0,0,0,20"/>

        <!-- Параметры отчета -->
        <GroupBox x:Name="GroupBoxReportParameters" Header="Параметры отчета" Grid.Row="1" Margin="0,0,0,15"
                  Background="White" BorderBrush="#E0E0E0" Padding="10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Тип отчета:" Width="140" VerticalAlignment="Center"/>
                    <ComboBox x:Name="ReportTypeComboBox" Width="220">
                        <ComboBoxItem Content="Для государственных органов" Tag="gov"/>
                        <ComboBoxItem Content="Для общественности" Tag="public"/>
                        <ComboBoxItem Content="Внутренний отчет" Tag="internal"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Период:" Width="140" VerticalAlignment="Center"/>
                    <DatePicker x:Name="StartDatePicker" Width="120" Margin="0,0,10,0"/>
                    <TextBlock Text="по" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <DatePicker x:Name="EndDatePicker" Width="120"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Область:" Width="140" VerticalAlignment="Center"/>
                    <ComboBox x:Name="RegionComboBox" Width="220" SelectionChanged="RegionComboBox_SelectionChanged">
                        <ComboBoxItem Content="Минск" Tag="minsk"/>
                        <ComboBoxItem Content="Брестская область" Tag="brest"/>
                        <ComboBoxItem Content="Витебская область" Tag="vitebsk"/>
                        <ComboBoxItem Content="Гомельская область" Tag="gomel"/>
                        <ComboBoxItem Content="Гродненская область" Tag="grodno"/>
                        <ComboBoxItem Content="Могилевская область" Tag="mogilev"/>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Город:" Width="140" VerticalAlignment="Center"/>
                    <ComboBox x:Name="CityComboBox" Width="220" SelectionChanged="CityComboBox_SelectionChanged"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- Дополнительные настройки -->
        <GroupBox x:Name="GroupBoxAdditionalSettings" Header="Дополнительные настройки" Grid.Row="2" Margin="0,0,0,10"
                  Background="White" BorderBrush="#E0E0E0" Padding="10">
            <StackPanel>
                <CheckBox x:Name="IncludeForecastCheckBox" Content="Включить прогнозные данные" Margin="0,5"
          Checked="IncludeForecastCheckBox_Changed" Unchecked="IncludeForecastCheckBox_Changed"/>
                <CheckBox x:Name="IncludeHistoryCheckBox" Content="Включить исторические данные" Margin="0,5"
          Checked="IncludeHistoryCheckBox_Changed" Unchecked="IncludeHistoryCheckBox_Changed"/>
                <CheckBox x:Name="IncludeGraphCheckBox" Content="Включить графики" Margin="0,5"
          Checked="IncludeGraphCheckBox_Changed" Unchecked="IncludeGraphCheckBox_Changed"/>
            </StackPanel>
        </GroupBox>

        <!-- Статус -->
        <TextBlock x:Name="StatusTextBlock" Grid.Row="3" Margin="0" Foreground="Gray" FontStyle="Italic"/>
        <!-- Кнопки -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="ReviewButton" Content="Предпросмотр" Width="130" Height="30" Margin="0,0,10,0"
                    Background="#17A2B8" Foreground="White" FontWeight="SemiBold" Click="Review_Click"/>
            <Button x:Name="GenerateButton" Content="Сгенерировать Docx" Width="160" Height="30"
                    Background="#28A745" Foreground="White" FontWeight="SemiBold" Click="GenerateButton_Click"/>
        </StackPanel>
    </Grid>

</UserControl>
