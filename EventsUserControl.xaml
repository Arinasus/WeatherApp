<UserControl x:Class="WeatherApp.EventsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#F5F7FA" x:Name="EventScrollViewer">
        <StackPanel Margin="30" Width="680">

            <!-- Заголовок формы -->
            <Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="10" Background="White"
        Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Организация мероприятия" Grid.ColumnSpan="2" 
                               FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333"/>

                    <TextBlock Text="Название:" Grid.Row="1" VerticalAlignment="Center" FontSize="14" Foreground="#444"/>
                    <TextBox x:Name="EventNameTextBox" Grid.Row="1" Grid.Column="1" Margin="10,5" Padding="5"/>

                    <TextBlock Text="Дата и время:" Grid.Row="2" VerticalAlignment="Center" FontSize="14" Foreground="#444"/>
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="10,5">
                        <DatePicker x:Name="EventDatePicker" Width="160" Padding="4"/>
                    </StackPanel>

                    <TextBlock Text="Описание:" Grid.Row="3" VerticalAlignment="Top" Margin="0,10,0,0" FontSize="14" Foreground="#444"/>
                    <TextBox x:Name="DescriptionTextBox" Grid.Row="3" Grid.Column="1" Margin="10,5" Height="100" 
                             TextWrapping="Wrap" AcceptsReturn="True" Padding="6"/>

                    <Button x:Name="AddEventButton"
                            Content="Добавить мероприятие"
                            Grid.Row="4" Grid.ColumnSpan="2" 
                            HorizontalAlignment="Right"
                            Width="180" Margin="0,20,0,0"
                            Background="#28A745" Foreground="White" FontWeight="SemiBold" Padding="8,4"
                            Cursor="Hand" Click="AddEventButton_Click"/>
                </Grid>
            </Border>

            <!-- Заголовок списка -->
            <TextBlock Text="Запланированные мероприятия:" FontSize="16" FontWeight="Bold" Foreground="#333" Margin="0,0,0,10" x:Name="ScheduledEvents"/>

            <!-- Кнопка удаления -->
            <Button x:Name="DeleteEventButton"
                    Content="Удалить выбранное"
                    HorizontalAlignment="Right"
                    Width="170" Margin="0,0,0,10"
                    Background="#DC3545" Foreground="White" FontWeight="SemiBold"
                    Padding="8,4" Cursor="Hand"
                    Click="DeleteEventButton_Click"/>

            <!-- Список мероприятий -->
            <ListView x:Name="EventsListView" Background="White" BorderBrush="#CCC" BorderThickness="1" Margin="0,0,0,10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#EEE" BorderThickness="0,0,0,1" Padding="10">
                            <StackPanel>
                                <TextBlock x:Name="EventName" Text="{Binding Name}" FontWeight="Bold" FontSize="14" Foreground="#222"/>
                                <TextBlock x:Name="EventDate" Text="{Binding Date, StringFormat='dd.MM.yyyy HH:mm'}" Foreground="#777" FontSize="12" Margin="0,2,0,0"/>
                                <TextBlock x:Name="EventDescription" Text="{Binding Description}" TextWrapping="Wrap" Foreground="#444" FontSize="13" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </ScrollViewer>
</UserControl>
