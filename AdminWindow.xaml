<Window x:Class="WeatherApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp"
        mc:Ignorable="d"
        Title="Окно администратора" Height="450" Width="800">
    <TabControl>
        <TabItem Header="Генерация отчетов">
            <local:ReportUserControl/>
        </TabItem>
        <TabItem Header="Создание оповещений">
            <local:AlertUserControl/>
        </TabItem>
        <TabItem Header="Создание мероприятий">
            <local:EventsUserControl/>
        </TabItem>
    </TabControl>
</Window>
