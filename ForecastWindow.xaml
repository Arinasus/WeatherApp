<Page x:Class="WeatherApp.ForecastWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Прогноз качества воздуха"
      Background="#FFF5F5F5"
      >
    <Page.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF2B579A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FF2B579A"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="4">
                            <Border.Triggers>
                                <!-- Наведение -->
                                <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.2" 
                                                        To="#A3C9F1"  
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" />
                                            <ColorAnimation Duration="0:0:0.2" 
                                                        To="#FF4F77A3" 
                                                        Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="UIElement.MouseDown">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.2" 
                                                        To="#FF1A3555" 
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" />
                                            <ColorAnimation Duration="0:0:0.2" 
                                                        To="#FF1A3555" 
                                                        Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.2" 
                                                        To="White" 
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" />
                                            <ColorAnimation Duration="0:0:0.2" 
                                                        To="#FF2B579A" 
                                                        Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="UIElement.MouseUp">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Duration="0:0:0.2" 
                                                        To="#FF2B579A" 
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" />
                                            <ColorAnimation Duration="0:0:0.2" 
                                                        To="#FF2B579A" 
                                                        Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка с градиентом -->
        <Border x:Name="BorderNameForecast" Grid.Row="0" Background="#FF2B579A" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

               <!-- <Image Source="icon.png" 
                       Width="32" Height="32"
                       VerticalAlignment="Center"/>-->

                <TextBlock Grid.Column="1" 
                           Text="Прогноз качества воздуха" 
                           VerticalAlignment="Center"
                           FontSize="20" 
                           FontWeight="SemiBold" 
                           Foreground="White"
                           Margin="10,0"
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer x:Name="ForecastScrollViewer" Grid.Row="1" Padding="15">
            <StackPanel>
                <!-- Информация о станции -->
                <Border CornerRadius="8" Background="White" Margin="0,0,0,15"
                        BorderBrush="#FFE0E0E0" BorderThickness="1"
                        Padding="15">
                    <StackPanel>
                        <TextBlock x:Name="StationNameText" 
                                   Text="Станция: Загрузка..." 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Foreground="#FF333333"/>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="Последнее обновление:" 
                                       Foreground="#FF666666"/>
                            <TextBlock x:Name="LastUpdateText" 
                                       Text="..." 
                                       Margin="5,0,0,0"
                                       Foreground="#FF2B579A"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Графики -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- История -->
                     <Border Grid.Column="0" 
                            CornerRadius="8" 
                            Background="White" 
                            Margin="0,0,7.5,15"
                            BorderBrush="#FFE0E0E0" 
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock x:Name="HistoryPlotName"
                                     Text="История качества воздуха"
                                     FontSize="16" 
                                     FontWeight="SemiBold" 
                                     Margin="15,15,15,10"
                                     Foreground="#FF333333"/>

                            <oxy:PlotView x:Name="HistoryPlot" 
                                        Height="250" 
                                        Margin="15,0,15,15"/>

                            <TextBlock x:Name="HistoryStatusText" 
                                     Text="Загрузка данных..."
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,15"
                                     Foreground="#FF666666"/>
                        </StackPanel>
                    </Border>
                    <!-- Прогноз -->
                    <Border Grid.Column="1" 
                            CornerRadius="8" 
                            Background="White" 
                            Margin="7.5,0,0,15"
                            BorderBrush="#FFE0E0E0" 
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock x:Name="ForecastPlotName"
                                     Text="Прогноз качества воздуха на 5 дней"
                                     FontSize="16" 
                                     FontWeight="SemiBold" 
                                     Margin="15,15,15,10"
                                     Foreground="#FF333333"/>

                            <oxy:PlotView x:Name="ForecastPlot" 
                                        Height="250" 
                                        Margin="15,0,15,15"/>

                            <TextBlock x:Name="ForecastStatusText" 
                                     Text="Загрузка данных..."
                                     HorizontalAlignment="Center"
                                     Margin="0,0,0,15"
                                     Foreground="#FF666666"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Кнопки действий -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,10">

                    <Button x:Name="PM25Button" 
            Content="PM25" 
            Style="{StaticResource RoundedButtonStyle}"
            Margin="5">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="4" 
                            Opacity="0.2" 
                            ShadowDepth="2"/>
                        </Button.Effect>
                    </Button>

                    <!-- Кнопка для PM10 -->
                    <Button x:Name="PM10Button" 
            Content="PM10" 
            Style="{StaticResource RoundedButtonStyle}"
            Margin="5">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="4" 
                            Opacity="0.2" 
                            ShadowDepth="2"/>
                        </Button.Effect>
                    </Button>


                    <Button x:Name="RefreshButton" 
                            Click="RefreshButton_Click"
                            Content="Обновить данные" 
                            Style="{StaticResource RoundedButtonStyle}">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="4" 
                                            Opacity="0.2" 
                                            ShadowDepth="2"/>
                        </Button.Effect>
                    </Button>

                    <Button  x:Name="ExportToPDFButton"
                             Content="Экспорт в PDF" 
                            Click=" ExportToPdf"
                            Style="{StaticResource RoundedButtonStyle}">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="4" 
                                            Opacity="0.1" 
                                            ShadowDepth="2"/>
                        </Button.Effect>
                    </Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Индикатор загрузки -->
        <Border x:Name="LoadingOverlay" 
                Grid.Row="1" 
                Background="#80000000" 
                Visibility="Collapsed"
                Panel.ZIndex="10">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar x:Name="ProgressBar"
                             IsIndeterminate="True" 
                             Width="200" 
                             Height="6" 
                             Foreground="#FF2B579A"/>
                <TextBlock Text="Загрузка данных..." 
                           Margin="0,10,0,0" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>